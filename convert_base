#include <stdlib.h>
#include "main.h"
/**
 * convert_alpha_numeric - convert digits to char
 * @num: digit or number
 * @upper: upper case check
 * Return: converted value
 */

int convert_alpha_numeric(int num, int upper)
{
	if (num >= 10)
		return (num - 10 + ((upper) ? 'A' : 'a'));
	else
		return (num + '0');
}

/**
 * convert_base - convert unsigned from base 10 to base
 * @num: decimal number
 * @bases: base to convert from
 * @upper: upper case check
 * Return: converted number to string
 */

char *convert_base(unsigned long num, unsigned int bases, int upper)
{
	int i = 0;
	char *str;
	unsigned long number = num;

	while (number >= bases)
	{
		number /= bases;
		i++;
	}
	str = malloc(sizeof(char) * i + 2);
	if (!str)
		return (0);
	str[i + 1] = '\0';

	while (i >= 0)
	{
		number = num % bases;
		str[i] = convert_alpha_numeric(number, upper);
		num /= bases;
		i--;
	}
	return (str);
}

/**
 * convert_base_pointer - convert pointer void to ul
 * @ptr: pointer
 * Return: converted string
 */

char *convert_base_pointer(unsigned long ptr)
{
	unsigned long adress;
	char *str;

	adress = ptr;
	if (adress == 0)
		return ("0");
	str = convert_base(adress, 16, 0);
	return (str);
}
/**
 * convert_rot13 - encode using rot13
 * @string: string to encode
 * Return: encoded string
 */

char *convert_rot13(char *string)
{
	int i = 0;
	char *str;
	int size = _strlen_recursion(string);

	str = malloc(sizeof(char) * size + 1);
	if (!s)
		return (0);

	while (string[i])
	{
		if ((string[i] >= 'a' && string[i] <= 'm')
				|| (string[i] >= 'A' && string[i] <= 'M'))
			str[i] = string[i] + 13;
		else if ((string[i] >= 'n' && string[i] <= 'z')
				|| (string[i] >= 'N' && string[i] <= 'Z'))
			str[i] = string[i] - 13;
		else
			str[i] = string[i];
		i++;
	}
	str[i] = '\0';
	return (str);
}
